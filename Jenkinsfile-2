pipeline {
    agent any

    stages {
        stage('Installing Packages') {
            steps {
                sh '''
                    sudo add-apt-repository universe
                    sudo apt-get update
                    sudo apt install python3-pip
                    sudo python3 --version
                    sudo python3 -m pip install ansible junit_xml pymongo xmljson jmespath kubernetes==12.0.1 openshift==0.12.1
                    sudo ansible --version
                    sudo ansible-playbook --version

                    sudo ansible-galaxy collection install ibm.mas_devops
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}   
